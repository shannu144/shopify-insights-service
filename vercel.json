{
    "buildCommand": "prisma generate && npm run build",
    "framework": "remix",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "env": {
        "DATABASE_URL": {
            "type": "postgres",
            "required": true
        },
        "AUTH_SECRET": {
            "type": "secret",
            "required": true
        },
        "SHOPIFY_WEBHOOK_SECRET": {
            "type": "secret",
            "required": false
        },
        "APP_URL": {
            "type": "string",
            "required": true
        }
    }
}