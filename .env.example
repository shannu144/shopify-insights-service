# Environment Variables Template
# Copy this file to .env and fill in the values

# Database Connection
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# Authentication Secrets
AUTH_SECRET="generate-a-random-secret-key-here"
JWT_SECRET="generate-another-random-secret-here"

# Application URL
APP_URL="http://localhost:5173"

# Shopify Webhook Secret (get this from Shopify after creating webhooks)
SHOPIFY_WEBHOOK_SECRET="your-webhook-secret-from-shopify"

# Optional: For OAuth flow (future enhancement)
# SHOPIFY_API_KEY="your-api-key"
# SHOPIFY_API_SECRET="your-api-secret"
